// 1. Informa ao Prisma para qual cliente gerar o c√≥digo (TypeScript)
generator client {
  provider = "prisma-client-js"
}

// 2. Informa ao Prisma como se conectar ao seu banco de dados
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("user") 
  createdAt DateTime @default(now())
}

// 3. Modelos do Banco de Dados

model Continent {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  area        Float?    
  population  BigInt?   
  imageUrl    String?   
  countries   Country[]
}

model Country {
  id           Int         @id @default(autoincrement())
  name         String      @unique
  capital      String?
  isoCode      String      @unique
  population   BigInt?
  flagUrl      String?     
  description  String?     @db.Text
  language     String?
  currency     String?
  area         Float?
  callingCode  String?
  imageUrl     String?     

  continentId  Int
  continent    Continent   @relation(fields: [continentId], references: [id])
  cities       City[]
  
  @@index([continentId])
}

model City {
  id           Int       @id @default(autoincrement())
  name         String
  latitude     Float     
  longitude    Float     
  population   BigInt
  area         Float?
  timezone     String?
  language     String?
  imageUrl     String?   

  countryId    Int
  country      Country   @relation(fields: [countryId], references: [id])

  @@unique([name, countryId]) 
  @@index([countryId])
}